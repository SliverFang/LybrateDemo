<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/card_elevation"
        android:layout_marginBottom="@dimen/small_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/check_imageView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="3"
                        android:src="@drawable/ic_check_black_24dp"
                        android:tint="@color/baseRed"
                        android:padding="3dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/baseRed"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_background_grey"/>

                </RelativeLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/baseRed"
                    android:layout_weight="1.5"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/number_text"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="2"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_background_filled"/>

                </RelativeLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/baseRed"
                    android:layout_weight="1.5"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/number_text2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="3"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/baseRed"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_background"/>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <TextView
                    android:textSize="@dimen/small_text_size"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Order Summary"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/small_text_size"
                    android:fontFamily="@font/roboto"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Payment"
                    android:gravity="center"
                    android:textSize="@dimen/small_text_size"
                    android:fontFamily="@font/roboto"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>